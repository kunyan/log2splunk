{
  "name": "log2splunk",
  "version": "0.0.1",
  "description": "Log to Splunk",
  "main": "./dist/index.js",
  "types": "./@types/index.d.ts",
  "files": [
    "dist",
    "@types"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "npm run clean",
    "build": "tsc --build tsconfig.production.json",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" npm run test",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunyan/log2splunk.git"
  },
  "keywords": [
    "logger",
    "splunk"
  ],
  "author": "Kun Yan <kyan@redhat.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kunyan/log2splunk/issues"
  },
  "homepage": "https://github.com/kunyan/log2splunk#readme",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nock": "^13.0.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "got": "^11.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write"
    ]
  }
}
